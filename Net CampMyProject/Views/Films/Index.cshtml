@using Net_CampMyProject.Data.Models;
@model IEnumerable<Net_CampMyProject.Models.ViewModels.FimViewModel>

@{
    ViewData["Title"] = "Films";

    var isAdmin = User.IsInRole(Roles.Admin);
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>       

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Title", "Index", new { sortBy = nameof(Film.Title), sortOrder = ViewBag.SortOrder })
            </th>
            <th>
                @Html.ActionLink("Released", "Index", new { sortBy = nameof(Film.ReleaseDate), sortOrder = ViewBag.SortOrder })
            </th>
            @if (isAdmin)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@item.Title</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @if (isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="ml-1">E</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="ml-1">R</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
