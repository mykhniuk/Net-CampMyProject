@model IEnumerable<Net_CampMyProject.Models.ViewModels.NewsViewModel>

@foreach (var item in Model)
{
    <div class="shadow-lg p-3 mb-2 bg-white rounded">
        <div class="row mx-md-n5">
            <div class="col px-md-5">
                <div class="p-3 border bg-light">
                    <div class="media-body">
                        <div>
                            <h4><a href="@item.NewsLink">@item.Title</a> </h4>
                        </div>
                        <div>
                            <img src="@item.ImgLink"/>
                        </div>
                        @item.Description
                    </div>
                    <div class="text-right"><small><i>Posted on  @item.Date</i></small></div>
                </div>
            </div>
        </div>
    </div>
}