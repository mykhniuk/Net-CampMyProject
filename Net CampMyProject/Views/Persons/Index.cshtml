@model IEnumerable<Net_CampMyProject.Data.Models.Person>

@{
    ViewData["Title"] = "Index";
    var isAdmin = User.IsInRole(Roles.Admin);

}

<h1>Index</h1>
@if (isAdmin)
{
    <p>

        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthnIformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocialNetworksLinks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthnIformation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SocialNetworksLinks)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
